<section class="container main">
  <% @posts.each_slice(3) do |posts| %>
    <div class="row">
      <% posts.each do |post| %>
        <div class="col-xs-10 col-sm-4 col-xs-offset-1 col-sm-offset-0">
          <div class="card">
            <div class="preview">
              <%= link_to post do %>
                <%= image_tag post.attachments.first.data.url :thumb %>
              <% end %>
            </div>
            <div class="info">
              <p><%= post.short_text %></p>
              <p>de: <%= link_to post.user.inspect, root_path, class: "link" %></p>
              <p>
                tags:
                <% post.tags.each do |tag| %>
                  <%= link_to "#" << tag.name, tag_path(tag), class: "link" %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= will_paginate @posts %>
</section>
