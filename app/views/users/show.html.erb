<section class="container">
  <div class="card-big">
    <div class="row">
      <div class="col-xs-12">
        <div class="info">
          <h2><%= @user.name %></h2>
        </div>
      </div>
    </div>
    <div class="description">
      <%= image_tag @user.picture, class: "user-picture"  %>

      <% if current_user.id == @user.id %>
        <p><strong>Email:</strong> <%= @user.email %></p>
      <% end %>

      <p><strong>Cadastrado em:</strong> <%= @user.created_at.strftime('%d/%m/%Y') %></p>
    </div>
  </div>
</section>
