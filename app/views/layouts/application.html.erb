<!DOCTYPE html>
<html>
  <head>
    <title>Provas</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <h1>Provas</h1>

    <% if current_user %>
      <span>Ol√°,
        <%= link_to current_user.first_name, user_path(current_user) %>,
        <%= link_to 'Sair', signout_path, id: 'sign_out' %>
      </span>
    <% else %>
      <%= link_to 'Entrar', login_path %>
    <% end %>

    <%= link_to 'Provas', posts_path %>
    <%= link_to 'Contato', contact_path %>

    <br>

    <%= yield %>

  </body>
</html>
